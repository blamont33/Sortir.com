{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}
{% block header %}
    {% include 'main/Navbar.html.twig' %}
{% endblock %}
{% block body %}

        <div class="text-center" id="pseudo_profil"><h3>{{ participant.pseudo }}</h3></div>
        <div class="row" id="info_profil">
            <div class="col-4">
                {% set image = participant.imageName %}
                <img id="avatar" src="{{ asset('images/products/'~image) }}">
            </div>
            <div class="col-3" >
                <div id="profil_categorie">
                    <div class="ecart_texte_profil">Prénom :</div>
                    <div class="ecart_texte_profil">Nom :</div>
                    <div class="ecart_texte_profil">Téléphone :</div>
                    <div class="ecart_texte_profil">Mail :</div>
                    <div class="ecart_texte_profil">Campus :</div>
                </div>
            </div>
            <div class="col-5">
                <div class="ecart_texte_profil">{{ participant.prenom }}</div>
                <div class="ecart_texte_profil">{{ participant.nom }}</div>
                <div class="ecart_texte_profil">{{ participant.telephone }}</div>
                <div class="ecart_texte_profil">{{ participant.email }}</div>
                <div class="ecart_texte_profil">{{ participant.campus.nomCampus }}</div>
            </div>
        </div>
        <div class="text-center"><a href="{{ path('main_accueil') }}" class="btn btn-info" role="button">Retour</a>
        </div>

{% endblock %}
